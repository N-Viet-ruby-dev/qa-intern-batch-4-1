<%= form_for question, remote: true do |f| %>
  <div id="error_messages"></div>

  <div class="form-group">
    <%= f.text_field :title, class: "form-control", placeholder: "Your Question" %>
  </div>

  <div class="form-group">
    <%= f.select :category_id, select_category, { include_blank: "Select a category" }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.text_area :content, class: "ckeditor form-control" %>
  </div>

  <div class="form-group">
    <%= f.select :tag_ids, select_tag, {},  multiple: true, class: "form-control tag-multiple" %>
  </div>

  <%= f.submit btn_text, class: "btn btn-primary" %>
<% end %>
