<hr>
<div class="row">
  <div class="col-md-8">
    <h4>
      <span><%= link_to question.title, "#" %></span>
    </h4>
    <p class="text-muted text-justify">
      <%= raw question.content %>
    </p>
    <p>
      <%= render partial: "shared/tag_show", collection: question.tags,
        as: :tag %>
    </p>
    <p>
      <span><%= link_to question.user.name, user_path(question.user) %></span>
      <span>asked on <%= question.created_at.strftime("%Y/%m/%d") %> in</span>
      <span><%= link_to question.category.name, "#" %></span>
    </p>
  </div>
  <div class="col-md-4">
    <div class="row">
      <div class="col-md-6">
        <h6>Answers</h6>
        <p class="badge badge-primary">15</p>
      </div>
      <div class="col-md-6">
        <h6>Votes</h6>
        <p class="badge badge-primary">15</p>
      </div>
    </div>
  </div>
</div>
