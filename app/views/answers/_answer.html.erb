<div class="card" id="answer_<%= answer.id %>" >
  <div class="card-body">
    <div class="row">
      <div class="col-md-1">
        <%= image_tag answer.user.picture.url, class: "rounded-circle img-fluid" %>
      </div>
      <div class="col-md-11 content">
        <p>
          <%= link_to answer.user.name.upcase, answer.user, class: "float-left font-weight-bold" %>
        </p>
        <div class="clearfix"></div>
        <p class="text-justify">
          <%= raw answer.content %>
        </p>
        <p class="text-secondary">
          <span>
            <%= "Posted #{distance_of_time_in_words(answer.updated_at, Time.now)} ago." %>
          </span>
          <% if current_user?(answer.user) %>
            <span class="float-right">
              <%= link_to fa_icon("edit"), edit_question_answer_path(answer.question, answer), remote: true %>
              <%= link_to fa_icon("trash"), [answer.question, answer], method: :delete, data: { confirm: "Are you sure?" } %>
            </span>
          <% end %>
        </p>
        <div class="vote">
          <%= render "answers/vote_form", answer: answer %>
        </div>
      </div>
    </div>
  </div>
</div>
