<% if @answer.errors.any? %>
  alert('Answer content invalid.');
<% else %>
  $('#answer-list').prepend('<%= j render @answer, comment: @comment, comments: @comments %>');
  $('#question-<%= @question.id %> .answer-count').html('<%= @question.answers.count %>');
  CKEDITOR.instances.answer_form_create.setData('');
<% end %>

